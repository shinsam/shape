<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:background="#E3DDDD"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:gravity="right"
        android:text="관계있는것을 2개 고르세요"
        android:textColor="#494E44"
        android:textSize="25sp"
        android:textStyle="bold|italic"  />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/circle" />
    </LinearLayout>
<com.google.android.material.divider.MaterialDivider
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:layout_marginBottom="10dp"
        />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/frame_layout06"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#4DD0E1"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image06"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/deer01" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_layout03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#9575CD"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/cat01" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_layout01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#F06292"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image01"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/dog01" />

            </FrameLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/frame_layout04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#81C784"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image04"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/cat02" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_layout02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#FFD54F"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/dog02" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame_layout05"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#81C784"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image05"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/bear01" />
            </FrameLayout>

        </TableRow>

    </TableLayout>

    <ImageButton
        android:layout_marginTop="20dp"
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/retry2" />

</LinearLayout>